# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Connection
# Per sviluppo locale: mongodb://localhost:27017/tictactoe_ox
# Per produzione: usa MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tictactoe_ox?retryWrites=true&w=majority

# JWT Secret (genera una stringa random sicura)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# ============= CRYPTO PAYMENTS =============
# NOWPayments.io - Per pagamenti crypto reali
# Registrati su https://nowpayments.io e ottieni le API keys
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_ipn_secret_for_webhooks

# Supporta: BTC, ETH, USDT (TRC20), USDC, LTC, etc.
# Docs: https://documenter.getpostman.com/view/7907941/S1a32n38

# ============= DAILY BONUS =============
# Monete FUN regalate ogni 24h
DAILY_FUN_BONUS=50

# ============= GAME SETTINGS =============
# Commissione piattaforma sulle partite cash (%)
PLATFORM_FEE_PERCENT=5

# Stake disponibili (in EUR)
AVAILABLE_STAKES=5,10,15,20,25,50

# ============= RATE LIMITS =============
# Richieste massime per minuto per IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ============= CORS =============
# URL del frontend (separa multipli con virgola)
CORS_ORIGINS=*

# ============= ADMIN =============
# Chiave segreta per endpoint admin
ADMIN_SECRET=your_admin_secret_key
